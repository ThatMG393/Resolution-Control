{
	"schemaVersion": 1,
	"id": "resolutioncontrol",
	"version": "${version}",

	"name": "ResolutionControl++",
	"description": "Gives you more control over minecraft's render resolution.",
	"authors": [
		"juliand665", "UltimateBoomer", "fantahund", "FlawCra"
	],
	"contact": {
		"homepage": "https://modrinth.com/project/resolution-control-plus-plus",
		"sources": "https://github.com/FlawCra/Resolution-Control",
		"issues": "https://github.com/FlawCra/Resolution-Control/issues"
	},

	"license": "MIT",
	"icon": "assets/resolutioncontrol/icon.png",

	"environment": "client",
	"entrypoints": {
		"main": [
			"cc.flawcra.resolutioncontrol.ResolutionControlMod"
		],
		"modmenu": [
			"cc.flawcra.resolutioncontrol.compat.modmenu.ModMenuInfo"
		]
	},
	"mixins": [
		"resolutioncontrol.mixins.json"
	],
	"accessWidener": "resolutioncontrol.accesswidener",
	"depends": {
		"fabricloader": ">=0.15.11",
		"fabric": "*",
		"minecraft": ["1.21.x"],
		"java": ">=21"
	},
	"suggests": {
		"flamingo": "*"
	}
}
